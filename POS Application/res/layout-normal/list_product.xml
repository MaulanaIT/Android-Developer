<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardElevation="0.5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">
a
        <LinearLayout
            android:id="@+id/product_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_product_product_code"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/list_product_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name of customer"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_product_product_name"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/list_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Email@gmail.com"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:inputType="textEmailAddress"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@color/colorLightGray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/list_product_image"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/product_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/list_product_product_category"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/list_product_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0813 0813 0813"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/product_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/list_product_product_cost"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/list_product_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0813 0813 0813"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/product_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/list_product_product_price"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/list_product_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0813 0813 0813"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/product_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/list_product_product_status"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/list_product_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0813 0813 0813"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/btn_edit"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:background="@color/colorDeepSkyBlue"/>

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/btn_delete"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:background="@color/colorRed"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>