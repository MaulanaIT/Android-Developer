<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardElevation="0.5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_return_order_product"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/return_order_product_name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0813 0813 0813"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@color/colorLightGray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lists_return_order_code"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/return_order_product_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0813 0813 0813"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_return_order_quantity"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/return_order_product_quantity"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/list_return_order_condition"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <Spinner
                android:id="@+id/return_order_product_condition"
                android:layout_width="128dp"
                android:layout_height="36dp"
                android:textAlignment="center"
                android:entries="@array/list_condition"
                android:text="0813 0813 0813"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:text="@string/btn_delete"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@color/colorRed"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>