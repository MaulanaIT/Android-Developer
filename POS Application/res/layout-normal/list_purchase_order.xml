<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0.5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_purchase_order_number"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/list_purchase_order_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0000 0000 0000 0000"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:inputType="number"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@color/colorLightGray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_purchase_order_outlet"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/list_purchase_order_outlet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1900000"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_purchase_order_supplier"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/list_purchase_order_supplier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2019-01-10"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:inputType="date"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_purchase_order_created_date"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/list_purchase_order_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2019-01-10"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:inputType="date"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_purchase_order_status"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/list_purchase_order_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aktif"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="14sp"
                android:inputType="text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_receive"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/btn_receive"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:background="@color/colorDeepSkyBlue"/>

            <Button
                android:id="@+id/btn_view"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/btn_view"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:background="@color/colorDeepSkyBlue"/>

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/btn_edit"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:background="@color/colorDeepSkyBlue"/>

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/btn_delete"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:background="@color/colorRed"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>