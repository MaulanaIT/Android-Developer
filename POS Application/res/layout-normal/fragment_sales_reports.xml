<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="36dp"
        android:paddingStart="36dp"
        android:paddingEnd="36dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/sales_reports_outlets"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"/>

            <Spinner
                android:id="@+id/outlets_spinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textAlignment="center">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/sales_reports_paid_by"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"/>

            <Spinner
                android:id="@+id/paid_by_spinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textAlignment="center">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:text="@string/sales_reports_start_date"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"/>

            <EditText
                android:id="@+id/input_start_date"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:dropDownSelector="@color/colorBlack"
                android:focusable="false">

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:text="@string/sales_reports_end_date"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"/>

            <EditText
                android:id="@+id/input_end_date"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:dropDownSelector="@color/colorBlack"
                android:focusable="false">

            </EditText>

        </LinearLayout>

        <Button
            android:id="@+id/btn_get_report"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="92dp"
            android:layout_marginTop="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/btn_report"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:background="@color/colorDeepSkyBlue"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>